{{#each errors}}
<div class="container mt-3">
    <div class="alert alert-danger">{{text}}</div>
</div>
{{else}}
{{/each}}

<div class="container mt-3">
    <h2>Goal Edit Menu</h2>
    {{!-- need ?_method=PUT and hidden input here from middleware to override --}}
    <form action="/goals/{{goal.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="name">Name:</label>
            <input required type="text" class="form-control" name="name" id="goal-name"
                placeholder="Enter a name for your goal" value="{{goal.name}}">
        </div>
        <div class="form-group">
            <label for="details">Details:</label>
            <textarea required type="text" class="form-control" name="details" id="goal-details"
                placeholder="Put in some details, be specific">{{goal.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" class="btn btn-danger">Delete</button>
    </form>
</div>